{
  "cli": {
    "version": ">= 13.0.0"
  },
  "build": {
    "development": {
      "channel": "development",
      "android": { "buildType": "apk" },
      "ios": { "simulator": true }
    },
    "preview": {
      "channel": "preview",
      "android": { "buildType": "apk" }
    },
    "production": {
      "channel": "production",
      "android": { "gradleCommand": ":app:bundleRelease" },
      "ios": { "simulator": false }
    }
  },
  "submit": {
    "production": {
      "android": {
        "track": "production",
        "serviceAccountKeyPath": "./path/to/service-account.json"
      },
      "ios": {
        "appleId": "${process.env.APPLE_ID}",
        "ascAppId": "${process.env.ASC_APP_ID}",
        "appleTeamId": "${process.env.APPLE_TEAM_ID}"
      }
    },
    "beta": {
      "android": {
        "track": "beta",
        "serviceAccountKeyPath": "./path/to/service-account.json"
      },
      "ios": {
        "appleId": "${process.env.APPLE_ID}",
        "ascAppId": "${process.env.ASC_APP_ID}",
        "appleTeamId": "${process.env.APPLE_TEAM_ID}",
        "betaGroups": ["Beta Testers"]
      }
    }
  }
}
